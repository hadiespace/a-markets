block const

doctype html
html(class="page" lang=`${language}` dir=`${isRTL ? "rtl" : "ltr"}`)
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width initial-scale=1")
		meta(name="format-detection" content="telephone=no")
		meta(name="format-detection" content="date=no")
		meta(name="format-detection" content="address=no")
		meta(name="format-detection" content="email=no")
		link(rel="icon" href="favicon/favicon.ico" sizes="any")
		link(rel="icon" href="favicon/icon.svg" type="image/svg+xml")
		link(rel="apple-touch-icon" href="favicon/apple-touch-icon.png")
		link(rel="manifest" href="favicon/site.webmanifest")
		block meta
		block head
			link(rel="preload" href="fonts/helvetica-neue-300.woff2" as="font" crossorigin="anonymous")
			link(rel="preload" href="fonts/helvetica-neue-400.woff2" as="font" crossorigin="anonymous")
			link(rel="preload" href="fonts/helvetica-neue-500.woff2" as="font" crossorigin="anonymous")
			link(rel="preload" href="fonts/helvetica-neue-700.woff2" as="font" crossorigin="anonymous")
			link(rel="preload" fetchpriority="high" as="image" href="img/content/preview-decor.webp" type="image/webp")
			link(rel="stylesheet" href="css/style.min.css")
	body.page__body
		div(id="path" data-path="." hidden)
		include ../data/data
		include ../mixins/mixins
		block header
			include ../includes/header-article
			include ../includes/header
		main.main
			block content
		block page-bottom
			include ../includes/modal
			script(src="js/bundle.min.js")
			script(src="js/switcher.js")
