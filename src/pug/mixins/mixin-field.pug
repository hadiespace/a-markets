mixin fieldName(parent, id)
	if isLTR
		div(
			class=`${parent}__field-name field field--required`
			data-error1="Обязательное поле"
			data-error2="Имя не должно содержать цифры"
		)
			label(class="field__label" for=`${id}-name`) Имя*
			input(
				class="field__input validate-name required"
				id=`${id}-name`
				type="text"
				name="name"
				placeholder="Иван"
			)
			span(class="field__error")

	if isRTL
		div(
			class=`${parent}__field-name field field--required`
			data-error1="שדה חובה"
			data-error2="השם לא צריך להכיל מספרים"
		)
			label(class="field__label" for=`${id}-name`) שם*
			input(
				class="field__input validate-name required"
				id=`${id}-name`
				type="text"
				name="name"
				placeholder="איוואן."
			)
			span(class="field__error")

